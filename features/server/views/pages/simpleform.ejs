<% include ../partials/header %>
<section class="ui basic segment">
  <header>
    <h1>PRESS Test Site</h1>
    <h2>Minimal Form Example</h2>
  </header>

  <main class="ui two column grid">
    <form class="ui form column" method="POST">
      <h3>Code Under Test</h3>
      <input name="simple_form[text]">

      <select name="simple_form[select]">
        <option selected="selected" value="0">A</option>
        <option value="1">B</option>
        <option value="2">C</option>
      </select>

      <button type="submit">Submit</button>
    </form>
    <div class="ui column">
      <%- include ../partials/request.ejs %>
    </div>
  </main>
</section>
<% include ../partials/footer %>
