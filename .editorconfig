# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
# Anecdotally, markdown processors misformat codeblocks in lists when the
# indent_size is not 4
indent_size = 4

[Makefile]
indent_style = tab
